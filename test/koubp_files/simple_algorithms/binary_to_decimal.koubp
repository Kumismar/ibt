function binary_to_decimal(string binary): int {
    int decimal = 0;
    int power = length(binary) - 1;
    for (int i = 0; i < length(binary); i = i + 1) {
        if (substring(binary, i, 1) == "1") {
            decimal = decimal + power(2, power);
        }
        power = power - 1;
    }
    return decimal;
}

print("Enter a binary number to convert to decimal:\n");
string binary_number = readline();
print("The decimal equivalent of " + binary_number + " is: " + convert_string(binary_to_decimal(binary_number)));